{{#extend "stylesheets"}}
		<!-- Plugins -->
		<link href="/plugins/magnific-popup/magnific-popup.css" rel="stylesheet">
		<link href="/css/animations.css" rel="stylesheet">
		<link href="/plugins/owl-carousel/owl.carousel.css" rel="stylesheet">

{{/extend}}

			<!-- main-container start -->
			<!-- ================ -->
			<section class="main-container">

				<div class="container">
					<div class="row">

						<!-- main start -->
						<!-- ================ -->
						<div class="main col-md-10 col-md-offset-1">

							<!-- page-title start -->
							<!-- ================ -->
							<h1 class="page-title">我的回答</h1>
							<div class="separator-2"></div>
							<!-- page-title end -->

							<!-- isotope filters start -->
							<!-- <div>
								<ul class="nav nav-pills">
									<li class="active"><a href="#">最新</a></li>
									<li><a href="#">最热</a></li>
								</ul>
							</div> -->
							<!-- isotope filters end -->
							<p></p>

							{{#if hava_answer}}
							{{#each answers}}
							<!-- blogpost start -->
							<article class="clearfix blogpost">
								<div class="blogpost-body">
									<div class="post-info">
										<span class="day">{{this.day}}</span>
										<span class="month">{{this.month}} {{this.year}}</span>
									</div>
									<div class="blogpost-content">
										<header>
											<h3 class="title">问题：<a href="/discuss_answer/?questionid={{this.questionid}}">{{this.questiontitle}}</a></h3>
											<h4>我的回答：{{this.content}}</h4>
											<i class="fa fa-thumbs-o-up pr-5">点赞数</i></a><span>{{this.praises}}</span>
											<div class="owl-carousel carousel">
												{{#each this.imgfileids}}
												<div class="image-box object-non-visible" data-animation-effect="fadeInLeft">
													<div class="overlay-container">
														<img src="/showImage?imgfileid={{this}}" alt="">
														<a href="/showImage?imgfileid={{this}}" class="overlay small popup-img">
															<i class="fa fa-search-plus"></i>
														</a>
													</div>
												</div>
												{{/each}}
											</div>
										</header>
									</div>
								</div>
							</article>
							<!-- blogpost end -->
							{{/each}}

							<!-- pagination start -->
							<ul class="pagination">
								{{#if prepage}}
								<li><a href="/my_answer?pagenum={{prepagenum}}">上一页</a></li>
								<li><a href="/my_answer">1</a></li>
								{{else}}
								<li><a>上一页</a></li>
								{{/if}}
								{{#if hava_precolon}}
								<li><a>...</a></li>
								{{/if}}
								{{#each prepages}}
								<li><a href="/my_answer?pagenum={{this}}">{{this}}</a></li>
								{{/each}}
								<li class="active"><a>{{pagenum}}<span class="sr-only">(current)</span></a></li>
								{{#each nextpages}}
								<li><a href="/my_answer?pagenum={{this}}">{{this}}</a></li>
								{{/each}}
								{{#if hava_postcolon}}
								<li><a>...</a></li>
								{{/if}}
								{{#if nextpage}}
								<li><a href="/my_answer?pagenum={{lastpagenum}}">{{lastpagenum}}</a></li>
								<li><a href="/my_answer?pagenum={{nextpagenum}}">下一页</a></li>
								{{else}}
								<li><a>下一页</a></li>
								{{/if}}
							</ul>
							<!-- pagination end -->

							{{else}}
							<h2>没有我的回答！</h2>
							{{/if}}

						</div>
						<!-- main end -->

					</div>
				</div>
			</section>
			<!-- main-container end -->



{{#extend "bottom_scripts"}}
		<!-- JavaScript files placed at the end of the document so the pages load faster
		================================================== -->
		<!-- Jquery and Bootstap core js files -->
		<script type="text/javascript" src="/plugins/jquery.min.js"></script>
		<script type="text/javascript" src="/bootstrap/js/bootstrap.min.js"></script>

		<!-- Modernizr javascript -->
		<script type="text/javascript" src="/plugins/modernizr.js"></script>

		<!-- Owl carousel javascript -->
		<script type="text/javascript" src="/plugins/owl-carousel/owl.carousel.js"></script>

		<!-- Magnific Popup javascript -->
		<script type="text/javascript" src="/plugins/magnific-popup/jquery.magnific-popup.min.js"></script>


		<!-- Appear javascript -->
		<script type="text/javascript" src="/plugins/jquery.appear.js"></script>

		<!-- Initialization of Plugins -->
		<script type="text/javascript" src="/js/template.js"></script>

{{/extend}}
