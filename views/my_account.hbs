		<script type="text/javascript" src="/js/template.js"></script>

		<script>

		$(document).ready(function(){

			jQuery.validator.addMethod("isIdCardNo", function (value, element){
					return this.optional(element) || isIdCardNo(value);
			 },"请正确输入您的身份证号码");

		 $("#accountform").validate({
			 rules: {
					 name: {
						required:true,
						maxlength:20
					},
					cardno:{
						required:true,
						isIdCardNo:true
					},
					nickname:{
						required:true,
						maxlength:128
					},
					position:{
						maxlength:128
					},
					hospital:{
						required:true,
						maxlength:256
					},
					sections:{
						required:true,
						maxlength:256
					},
					email:{
						email:true
					},
					qq:{
						number:true,
						maxlength:20
					},
					weixin:{
						maxlength:128
					},
					wxnickname:{
						maxlength:128
					}
				},
				messages:{
					name:{required:"需要输入姓名",maxlength:"姓名最长不超过20个字符"},
					cardno:{required:"请输入身份证号",isIdCardNo:"请输入正确的身份证号"},
					nickname:{required:"需要输入昵称",maxlength:"昵称最长不超过128个字符"},
					position:{maxlength:"职称最长不超过128个字符"},
					hospital:{required:"需要输入医院",maxlength:"医院最长不超过256个字符"},
					sections:{required:"需要输入科室",maxlength:"科室最长不超过256个字符"},
					email:{email:"请输入正确的email"},
					qq:{number:"qq必须为数字",maxlength:"qq最长不超过20个字符"},
					weixin:{maxlength:"微信最长不超过128个字符"},
					wxnickname:{maxlength:"微信昵称最长不超过128个字符"}
				},
				submitHandler: function(form) {
					form.submit();
			 }
		 });
		}); // End document ready

		</script>

